         y := 0.0;
     }
     
     // normal procedures that take structs as arguments
     distance :: proc (p1 : Point*, p2 : Point*) -> Float {
         x := p1.x - p2.x; // '.' access works for structs and pointers to structs
         y := p1.y - p2.y;
         
         return extern sqrt(Float) -> Float(x*x + y*y);
     };
     
